{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="loginWrapper">
    <form action="{{ path('app_login') }}" method="post">
        

        <h1 class="h3 mb-3 font-weight-normal">Zaloguj się</h1>
        {# <input type="text" placeholder="Wprowadź adres email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <input type="password" placeholder="Podaj hasło" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required> #}
        <input type="text" id="username" name="_username" value="{{ last_username }}">
        <input type="password" id="password" name="_password">
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn-lg btn-primary" type="submit">
            Zaloguj
        </button>
    </form>
    <div class="securityNav">
        <a href="{{path('app_register')}}">Rejestracja</a>
    </div>
    
    {% if error %}
        <div class="alert alert-danger">Error: {{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    
</div>
{% endblock %}
